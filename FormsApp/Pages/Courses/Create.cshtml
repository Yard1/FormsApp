@page
@model FormsApp.Pages.Courses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseVM.Title" class="control-label"></label>
                <input asp-for="CourseVM.Title" class="form-control" />
                <span asp-validation-for="CourseVM.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseVM.Stage" class="control-label"></label>
                <select asp-for="CourseVM.Stage" class="form-control" asp-items="Html.GetEnumSelectList<FormsApp.Models.Stage>()"></select>
                <span asp-validation-for="CourseVM.Stage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseVM.MaxStudents" class="control-label"></label>
                <input asp-for="CourseVM.MaxStudents" class="form-control" />
                <span asp-validation-for="CourseVM.MaxStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseVM.Trainer" class="control-label"></label>
                <input asp-for="CourseVM.Trainer" class="form-control" />
                <span asp-validation-for="CourseVM.Trainer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

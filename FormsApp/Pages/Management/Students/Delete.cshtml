}

<h2>Delete</h2>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student.FirstMidName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.FirstMidName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student.Faculty)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.Faculty)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student.StudentCourses)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Title</th>
                    <th>Stage</th>
                </tr>
                @foreach (var item in Model.Student.StudentCourses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Stage)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Student.StudentId" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
